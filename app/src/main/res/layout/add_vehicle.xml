    <ScrollView
        android:id="@+id/scrollViewRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Vehicle_No"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="No Kenderaan"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Puspakom_Expired_Date"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:focusable="false"
                android:hint="Puspakom Expired Date"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Roadtax_Expired_Date"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:focusable="false"
                android:hint="Roadtax Expired Date"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />


            <EditText
                android:id="@+id/Insurance"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Insurance"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Tyre_When_Change"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:focusable="false"
                android:hint="Tayar Bila Tukar"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Tyre_Brand"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Jenis Tayar"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Maintenance_Date"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:focusable="false"
                android:hint="Maintenance Date"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Change_Gearbox_Date"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:datePickerMode="calendar"
                android:focusable="false"
                android:hint="Tukar Minyak Gearbox"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Axsel"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Axsel"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/Tyre_Amount"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text_bg"
                android:hint="Bilangan Tayar"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#654900"
                android:textSize="14sp"
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/continue_button"
                android:layout_width="260dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:background="#000000"
                android:text="CONTINUE"
                android:textAlignment="center"
                android:textColor="#ffffff" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>